doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascripts/d3.js')
    block head
  body
    nav(class='navbar navbar-expand-sm navbar-light bg-light')
      a(class='navbar-brand mr-auto' href='/app') Hades
      ul(class='navbar-nav')
        if locals.user
          li(class='nav-item')
            a(class='nav-link' href='/app/user') Profile
          li(class='nav-item')
            a(class='nav-link' href='/auth/logout') Log Out
        else
          li(class='nav-item')
            a(class='nav-link' href='/auth/login') Log In
    block breadcrumb
    div(class='container')
      block content
    nav(class='navbar navbar-expand-sm navbar-light bg-light')
      ul(class='navbar-nav')
        li(class='nav-item')
          span(class='navbar-text') A 2020 Pandemic/Wildfires/Heatwave Project
        li(class='nav-item')
          a(class='nav-link' href='https://github.com/mhersher/aqimon') GitHub
        li(class='nav-item')
          a(class='nav-link' href='https://github.com/mhersher/aqmonitor') Sample Meter
