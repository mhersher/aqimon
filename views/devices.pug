extends layout

block content
  div(class='row')
    h3 All Sensors
  div(class='row')
    table(class='table table-hover')
      tr
        th Name
        th Most Recent Sample
        th AQI
        th Temp
        th Humidity
        th Trend
      each device in devices
        td= device.name
        td
          | !{device.sample_age}
          br
          | !{device.last_sample_time.toLocaleString()}
        td
          | PM2.5: !{device.pm25aqi}
          br
          | PM10: !{device.pm10aqi}
        td !{device.temp}â„‰
        td !{device.humidity}%
        td
          div(class='btn-group btn-group-sm' role='group' aria-label='Time Period')
            button(type='button' class='btn btn-secondary' onclick='window.location.replace("tracker/device/'+device.id+'/samples/60")') 1hr
            button(type='button' class='btn btn-secondary' onclick='window.location.replace("tracker/device/'+device.id+'/samples/720")') 12hr
            button(type='button' class='btn btn-secondary' onclick='window.location.replace("tracker/device/'+device.id+'/samples/1440")') 1d
            button(type='button' class='btn btn-secondary' onclick='window.location.replace("tracker/device/'+device.id+'/samples/10080")') 7d
            button(type='button' class='btn btn-secondary' onclick='window.location.replace("tracker/device/'+device.id+'/samples/43200")') 30d
